<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">?backgroundPrimary</item>
        <item name="toolbarNavigationButtonStyle">@style/TintedNavigation</item>
    </style>

    <style name="TintedNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?textPrimary</item>
    </style>

    <style name="Theme.MotionLayoutToolbar" parent="Theme.Base">
        <item name="backgroundPrimary">@color/gray</item>
        <item name="textPrimary">@color/black</item>
        <item name="borderPrimary">@color/gray2</item>
    </style>

    <style name="Theme.MotionLayoutToolbar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseText">
        <item name="android:fontFamily">@font/product_sans_light</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?textPrimary</item>
    </style>

    <style name="Title" parent="BaseText">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Title.Expanded">
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
</resources>